{
  "name": "houfy-assets",
  "version": "1.0.0",
  "description": "Local dev environment for SkyforestGetaway with Houfy proxy",
  "main": "workers/houfy-dev-proxy.js",
"scripts": {
  "dev": "concurrently --kill-others -n worker,bs,tunnel -c green,magenta,blue \"npm:worker:local\" \"npm:bs\" \"npm:tunnel\"",
  "dev:static": "concurrently --kill-others -n bs,tunnel -c magenta,blue \"npm:bs\" \"npm:tunnel\"",

  "bs": "browser-sync start --config bs-config.js",
  "tunnel": "cloudflared tunnel --config ~/.cloudflared/config.yml run dev",

  "worker:local": "wrangler dev --port=8787 --config wrangler.dev.toml",

  "deploy:uat": "wrangler deploy --config wrangler.uat.toml",
  "deploy:prod": "wrangler deploy --config wrangler.prod.toml",

  "tail:uat": "wrangler tail --config wrangler.uat.toml",
  "tail:prod": "wrangler tail --config wrangler.prod.toml"
},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jjkaye/houfy-assets.git"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "concurrently": "^8.2.2",
    "npm-run-all": "^4.1.5",
    "wrangler": "^3.90.0"
  }
}
